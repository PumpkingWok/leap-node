[Unit]
Description=PARSEC node
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=ubuntu
Group=ubuntu
PermissionsStartOnly=true
ExecStart=/usr/local/bin/parsec --p2pPort=46691 --preset=testnet-alpha
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target